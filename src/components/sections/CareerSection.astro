---
import { type Profile } from "@/lib/siteData";
import { useTranslations } from "@/i18n/utils";

interface Props {
    lang: string;
    profile: Profile;
}

const { lang, profile } = Astro.props;
const t = useTranslations(lang as any);
---

<section id="career" class="section-shell alt with-gap">
    <div class="section-header justify-center">
        <h2 class="section-title w-full text-center">{t("career.title")}</h2>
    </div>

    <div class="grid gap-6 md:grid-cols-2">
        <div class="space-y-3">
            <div
                class="text-sm font-semibold tracking-wide text-muted uppercase"
            >
                {t("career.education")}
            </div>
            <div class="space-y-3">
                {
                    profile.educations.map((item) => (
                        <article class="rounded-2xl border border-border bg-surface p-4 shadow-[0_12px_32px_rgba(15,23,42,0.06)] transition hover:translate-x-2.5">
                            <div class="text-xs font-semibold uppercase tracking-[0.08em] text-muted">
                                {item.duration}
                            </div>
                            <h3 class="mt-1 text-lg font-semibold text-fg">
                                {item.role}
                            </h3>
                            <p class="text-sm text-fg-subtle">
                                {item.affiliation}
                            </p>
                        </article>
                    ))
                }
            </div>
        </div>

        <div class="space-y-3">
            <div
                class="text-sm font-semibold tracking-wide text-muted uppercase"
            >
                {t("career.experience")}
            </div>
            <div class="space-y-3">
                {
                    profile.experiences.map((item) => (
                        <article class="rounded-2xl border border-border bg-surface p-4 shadow-[0_12px_32px_rgba(15,23,42,0.06)] transition hover:translate-x-2.5">
                            <div class="text-xs font-semibold uppercase tracking-[0.08em] text-muted">
                                {item.duration}
                            </div>
                            <h3 class="mt-1 text-lg font-semibold text-fg">
                                {item.role}
                            </h3>
                            <p class="text-sm text-fg-subtle">
                                {item.affiliation}
                            </p>
                        </article>
                    ))
                }
            </div>
        </div>
    </div>
</section>
