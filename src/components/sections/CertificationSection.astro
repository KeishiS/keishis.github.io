---
import { useTranslations } from "@/i18n/utils";

interface Certification {
    title: string;
    date: string;
}

interface Props {
    lang: string;
    certifications: Certification[];
}

const { lang, certifications = [] } = Astro.props;
const t = useTranslations(lang as any);
---

<section id="certification" class="section-shell with-gap">
    <div class="section-header justify-center">
        <h2 class="section-title w-full text-center">{t("nav.certification")}</h2>
    </div>

    {
        certifications.length === 0 ? (
            <p class="text-muted">{t("certification.no_entries")}</p>
        ) : (
            <div class="certification-list card-stack">
                {certifications.map((cert) => (
                    <article class="certification-card">
                        <div class="flex items-center justify-between gap-3">
                            <span class="certification-title">
                                {cert.title}
                            </span>
                            <span class="certification-date">{cert.date}</span>
                        </div>
                    </article>
                ))}
            </div>
        )
    }
</section>

<style>
    .certification-list {
        display: flex;
        flex-direction: column;
        gap: 0.9rem;
    }
    .certification-card {
        border: 1px solid var(--color-border);
        background: var(--color-surface);
        border-radius: 16px;
        padding: 1rem 1.1rem;
        box-shadow: 0 10px 30px rgba(15, 23, 42, 0.06);
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
    }
    .certification-title {
        font-weight: 700;
        color: var(--color-fg);
    }
    .certification-date {
        color: var(--color-muted);
        font-size: 0.9rem;
        white-space: nowrap;
    }

    .card-stack {
        max-width: 880px;
        margin-inline: auto;
        width: 100%;
    }

    /* Mobile tweaks */
    @media (max-width: 768px) {
        .certification-card {
            padding: 1rem;
            gap: 0.4rem;
        }
        .card-stack {
            max-width: 100%;
        }
        .certification-card > div {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.3rem;
        }
    }
</style>
