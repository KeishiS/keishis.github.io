---
import { type ChangelogEntry } from "@/lib/siteData";
import { useTranslations } from "@/i18n/utils";

interface Props {
    lang: string;
    entries: ChangelogEntry[];
}

const { lang, entries = [] } = Astro.props;
const t = useTranslations(lang as any);
---

<section id="changelog" class="section-shell alt with-gap">
    <div class="section-header justify-center">
        <h2 class="section-title w-full text-center">{t("nav.changelog")}</h2>
    </div>

    {
        entries.length === 0 ? (
            <p class="text-muted">{t("changelog.no_entries")}</p>
        ) : (
            <div class="changelog-list card-stack">
                {entries.map((entry) => (
                    <article class="changelog-card">
                        <div class="flex items-center justify-between gap-3">
                            <span class="changelog-version">
                                {entry.version}
                            </span>
                            <span class="changelog-date">{entry.date}</span>
                        </div>
                        <p class="changelog-summary">{entry.summary}</p>
                    </article>
                ))}
            </div>
        )
    }
</section>

<style>
    .changelog-list {
        display: flex;
        flex-direction: column;
        gap: 0.9rem;
    }
    .changelog-card {
        border: 1px solid var(--color-border);
        background: var(--color-surface);
        border-radius: 16px;
        padding: 1rem 1.1rem;
        box-shadow: 0 10px 30px rgba(15, 23, 42, 0.06);
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
    }
    .changelog-version {
        font-weight: 700;
        color: var(--color-fg);
    }
    .changelog-date {
        color: var(--color-muted);
        font-size: 0.9rem;
    }
    .changelog-summary {
        color: var(--color-fg-subtle);
        line-height: 1.5;
    }

    .card-stack {
        max-width: 880px;
        margin-inline: auto;
        width: 100%;
    }

    /* Mobile tweaks */
    @media (max-width: 768px) {
        .changelog-card {
            padding: 1rem;
            gap: 0.4rem;
        }
        .card-stack {
            max-width: 100%;
        }
    }
</style>
