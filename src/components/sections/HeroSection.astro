---
import { useTranslations } from "@/i18n/utils";
import { type Profile } from "@/lib/siteData";

interface Props {
    lang: string;
    profile: Profile;
}

const { lang, profile } = Astro.props;

const t = useTranslations(lang as any);
---

<section class="hero-shell">
    <div class="hero-grid">
        <div class="hero-card">
            <p class="eyebrow">{t("hero.eyebrow")}</p>
            <h1 class="hero-title">
                <span class="hero-name">{profile.name}</span>
            </h1>
            <p class="hero-role">{t("hero.role")}</p>

            <p class="hero-lead" set:html={profile.bio} />

            <div class="hero-meta">
                {
                    profile?.focus && (
                        <div class="meta-chip">
                            <span class="meta-label">
                                {t("hero.focus_label")}
                            </span>
                            <span class="meta-value">{profile.focus}</span>
                        </div>
                    )
                }
                {
                    profile?.base && (
                        <div class="meta-chip">
                            <span class="meta-label">
                                {t("hero.base_label")}
                            </span>
                            <span class="meta-value">{profile.base}</span>
                        </div>
                    )
                }
                {
                    profile?.email && (
                        <div class="meta-chip">
                            <span class="meta-label">Email</span>
                            <span class="meta-value">{profile.email}</span>
                        </div>
                    )
                }
            </div>
        </div>

        <div class="hero-visual" aria-hidden="true">
            <div class="hero-photo">
                <img src={profile.avatar} alt={profile.name} loading="eager" />
            </div>
        </div>
    </div>
</section>

<style>
    .hero-shell {
        position: relative;
        overflow: hidden;
        border-radius: 28px;
        margin: 2.5rem 1rem 0;
        padding: clamp(2.5rem, 4vw, 4rem);
        background:
            radial-gradient(
                circle at 20% 20%,
                color-mix(in srgb, var(--color-accent) 18%, transparent),
                transparent 32%
            ),
            radial-gradient(
                circle at 90% 10%,
                color-mix(in srgb, var(--color-info) 16%, transparent),
                transparent 34%
            ),
            var(--color-surface);
        border: 1px solid var(--color-border);
        box-shadow: 0 24px 60px rgba(15, 23, 42, 0.08);
        max-width: 1180px;
        margin-inline: auto;
    }
    .hero-grid {
        display: grid;
        grid-template-columns: minmax(0, 1.35fr) minmax(260px, 0.85fr);
        gap: clamp(1.75rem, 4vw, 2.75rem);
        align-items: center;
    }
    @media (max-width: 900px) {
        .hero-grid {
            grid-template-columns: 1fr;
        }
    }
    .hero-card {
        display: grid;
        gap: 1.25rem;
    }
    .hero-title {
        font-family: var(--font-display);
        font-size: clamp(2.6rem, 5vw, 3.4rem);
        line-height: 1.05;
        letter-spacing: -0.03em;
        margin: 0;
    }
    .hero-title .hero-name {
        color: var(--color-fg);
    }
    .hero-role {
        color: var(--color-muted);
        font-size: 1rem;
        margin-top: 0.35rem;
    }
    .hero-lead {
        color: var(--color-fg-subtle);
        line-height: 1.7;
        max-width: 48rem;
        /* word-break: keep-all; */
        font-size: 1.05rem;
    }
    .hero-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 0.65rem;
    }
    .meta-chip {
        border: 1px solid var(--color-border);
        background: var(--color-surface);
        border-radius: 14px;
        padding: 0.6rem 0.85rem;
        min-width: 80px;
    }
    .meta-label {
        display: block;
        color: var(--color-muted);
        font-size: 0.7rem;
        letter-spacing: 0.08em;
        text-transform: uppercase;
    }
    .meta-value {
        color: var(--color-fg);
        font-weight: 700;
        font-size: 0.98rem;
    }
    .hero-visual {
        position: relative;
        width: 100%;
        display: grid;
        place-items: center;
    }
    .hero-photo {
        width: clamp(220px, 30vw, 320px);
        aspect-ratio: 1;
        border-radius: 24px;
        overflow: hidden;
        background: transparent;
    }
    .hero-photo img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Mobile tweaks */
    @media (max-width: 768px) {
        .hero-shell {
            padding: 1.75rem 1.25rem;
            margin: 1rem;
        }
        .hero-grid {
            grid-template-columns: 1fr;
            text-align: center;
            justify-items: center;
        }
        .hero-card {
            text-align: center;
            justify-items: center;
            align-items: center;
        }
        .hero-title {
            font-size: clamp(2rem, 8vw, 2.4rem);
            white-space: normal;
        }
        .hero-lead {
            font-size: 1rem;
            max-width: 100%;
            margin-left: auto;
            margin-right: auto;
        }
        .hero-meta {
            justify-content: center;
            width: 100%;
        }
        .hero-avatar {
            justify-self: center;
        }
    }
</style>
