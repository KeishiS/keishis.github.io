---
import { useTranslations } from "@/i18n/utils";

interface Portfolio {
    title: string;
    category: string;
    description: string;
    url: string;
}

interface Props {
    lang: string;
    portfolios: Portfolio[];
}

const { lang, portfolios = [] } = Astro.props;
const t = useTranslations(lang as any);
---

<section id="portfolio" class="section-shell alt with-gap">
    <div class="section-header justify-center">
        <h2 class="section-title w-full text-center">{t("nav.portfolio")}</h2>
    </div>

    {
        portfolios.length === 0 ? (
            <p class="text-muted">{t("portfolio.no_entries")}</p>
        ) : (
            <div class="portfolio-list card-stack">
                {portfolios.map((portfolio) => (
                    <article class="portfolio-card">
                        <div class="portfolio-header">
                            <div class="flex flex-col gap-1">
                                <h3 class="portfolio-title">{portfolio.title}</h3>
                                <span class="portfolio-category">
                                    {portfolio.category}
                                </span>
                            </div>
                            <a
                                href={portfolio.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="portfolio-link"
                                aria-label={`Visit ${portfolio.title}`}
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
                                    ></path>
                                    <polyline points="15 3 21 3 21 9"></polyline>
                                    <line x1="10" y1="14" x2="21" y2="3"></line>
                                </svg>
                            </a>
                        </div>
                        <p class="portfolio-description">{portfolio.description}</p>
                    </article>
                ))}
            </div>
        )
    }
</section>

<style>
    .portfolio-list {
        display: flex;
        flex-direction: column;
        gap: 0.9rem;
    }
    .portfolio-card {
        border: 1px solid var(--color-border);
        background: var(--color-surface);
        border-radius: 16px;
        padding: 1.2rem 1.3rem;
        box-shadow: 0 10px 30px rgba(15, 23, 42, 0.06);
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
        transition: all 0.2s ease;
    }
    .portfolio-card:hover {
        box-shadow: 0 12px 35px rgba(15, 23, 42, 0.1);
        transform: translateY(-2px);
    }
    .portfolio-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        gap: 1rem;
    }
    .portfolio-title {
        font-weight: 700;
        color: var(--color-fg);
        font-size: 1.1rem;
        margin: 0;
    }
    .portfolio-category {
        color: var(--color-muted);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
    .portfolio-description {
        color: var(--color-fg-subtle);
        line-height: 1.6;
        margin: 0;
    }
    .portfolio-link {
        flex-shrink: 0;
        color: var(--color-accent);
        transition: color 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
        border-radius: 8px;
        background: var(--color-bg);
        border: 1px solid var(--color-border);
    }
    .portfolio-link:hover {
        color: var(--color-accent-hover);
        background: var(--color-accent-subtle);
    }

    .card-stack {
        max-width: 880px;
        margin-inline: auto;
        width: 100%;
    }

    /* Mobile tweaks */
    @media (max-width: 768px) {
        .portfolio-card {
            padding: 1rem;
            gap: 0.6rem;
        }
        .card-stack {
            max-width: 100%;
        }
        .portfolio-title {
            font-size: 1rem;
        }
    }
</style>
